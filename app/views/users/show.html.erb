<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Posts by user:</strong>
  <br><br>
  
  <% if @posts.size>=1%>
    <% @posts.each do |post| %>
      <%= post.content %><br>
    <% end %>
  <%else%>
  <%= "User doesn't have any posts" %>
  <% end %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
